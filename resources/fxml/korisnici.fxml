<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@/css/korisnici.css" />


   </stylesheets>
   <columnConstraints>
      <ColumnConstraints maxWidth="200" minWidth="200" />
      <ColumnConstraints maxWidth="100" minWidth="100" />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <ListView fx:id="listKorisnici" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1" GridPane.rowSpan="5" />
      <Label text="Ime: " GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="fldIme" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      <Label text="Prezime:" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField fx:id="fldPrezime" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      <Label text="E-mail:" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <TextField fx:id="fldEmail" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      <Label text="Korisničko ime:" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <TextField fx:id="fldUsername" onAction="#dugmegenerisi" GridPane.columnIndex="2" GridPane.rowIndex="5" />
      <Label text="Lozinka:" GridPane.columnIndex="1" GridPane.rowIndex="6" />
      <PasswordField fx:id="fldPassword" GridPane.columnIndex="2" GridPane.rowIndex="6" />
      <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="3" GridPane.rowIndex="8">
        <buttons>
            <Button fx:id="btnObrisi" mnemonicParsing="false" onAction="#obrisiAction" text="Obriši">
               </Button>
            <Button fx:id="btnGenerisi" mnemonicParsing="false" onAction="#dugmegenerisi" text="Generiši" />
            <Button fx:id="btnDodaj" mnemonicParsing="false" onAction="#dodajAction" text="Dodaj">
               </Button>
           <Button fx:id="btnKraj" cancelButton="true" mnemonicParsing="false" onAction="#krajAction" text="Kraj">
           </Button>

        </buttons>
      </ButtonBar>
      <PasswordField fx:id="fldPasswordRepeat" GridPane.columnIndex="2" GridPane.rowIndex="7">
         <GridPane.margin>
            <Insets />
         </GridPane.margin></PasswordField>
      <Label text="Ponovi lozinku:" GridPane.columnIndex="1" GridPane.rowIndex="7" />
      <Slider fx:id="sliderGodinaRodjenja" max="2019.0" min="1920.0" GridPane.columnIndex="2" GridPane.rowIndex="4" />
      <Label text="Godina rođenja:" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <CheckBox fx:id="cbAdmin" mnemonicParsing="false" onAction="#chekiraj" text="CheckBox" GridPane.columnIndex="2" />
      <Label text="Administator: " GridPane.columnIndex="1" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
